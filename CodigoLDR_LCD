#include <Wire.h>
#include <LiquidCrystal_I2C.h>

LiquidCrystal_I2C lcd(0x27, 16, 2);
#define LDR_PIN A1

void setup() {
  Serial.begin(9600);
  lcd.init();
  lcd.backlight();
  lcd.clear();
  lcd.setCursor(0, 0);
  lcd.print("Teste LDR + LCD");
  delay(1500);
  lcd.clear();
}

void loop() {
  int valorLuz = analogRead(LDR_PIN);

  Serial.print("Valor LDR: ");
  Serial.println(valorLuz);

  lcd.setCursor(0, 0);
  lcd.print("Luz: ");
  lcd.print(valorLuz);
  lcd.print("    ");

  lcd.setCursor(0, 1);
  if (valorLuz < 300) {
    lcd.print("Escuro       ");
  } else if (valorLuz < 700) {
    lcd.print("Luz media    ");
  } else {
    lcd.print("Claro        ");
  }

  delay(500);
}
