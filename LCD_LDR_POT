#include <LiquidCrystal.h>

LiquidCrystal lcd(7, 6, 5, 4, 3, 2);

#define LDR_PIN A1

void setup() {
  Serial.begin(9600);
  lcd.begin(16, 2);
  lcd.clear();
}

void loop() {
  int valorLuz = 1023 - analogRead(LDR_PIN);

  Serial.print("Luz: ");
  Serial.println(valorLuz);

  lcd.setCursor(0, 0);
  lcd.print("Luz: ");
  lcd.print(valorLuz);
  lcd.print("    ");

  lcd.setCursor(0, 1);
  if (valorLuz < 300) {
    lcd.print("Escuro       ");
  } else if (valorLuz < 700) {
    lcd.print("Luz media    ");
  } else {
    lcd.print("Claro        ");
  }

  delay(500);
}
